cmake_minimum_required( VERSION 3.13 FATAL_ERROR )

get_filename_component( scalapackpp_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH )

list( APPEND CMAKE_MODULE_PATH ${scalapackpp_CMAKE_DIR} )
include( CMakeFindDependencyMacro )

if (NOT TARGET blacspp::blacspp)
    find_dependency( blacspp CONFIG REQUIRED HINTS "@blacspp_CONFIG@" )
endif()

set(scalapack_LIBRARY_DIR "@scalapack_LIBRARY_DIR@")
if (NOT scalapack_LIBRARY_DIR)
    set(scalapack_LIBRARIES "@scalapack_LIBRARIES@")
endif(NOT scalapack_LIBRARY_DIR)
find_dependency( ScaLAPACK MODULE )

list(REMOVE_AT CMAKE_MODULE_PATH -1)

if(NOT TARGET scalapackpp::scalapackpp)
    include("${scalapackpp_CMAKE_DIR}/scalapackpp-targets.cmake")
endif()

set(scalapackpp_LIBRARIES scalapackpp::scalapackpp)
